<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#059DC0"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/const_layout">
    <EditText
        android:id="@+id/edit_trip_enter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#04ECF0"
        android:gravity="center"
        android:inputType="text"
        android:textColor="#4C5270"
        android:textSize="16dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="@+id/const_layout"
        app:layout_constraintRight_toRightOf="@+id/const_layout"
        app:layout_constraintLeft_toLeftOf="@+id/const_layout"
        app:layout_constraintBottom_toTopOf="@+id/trips"/>
    <TextView
        android:id="@+id/trips"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.8"
        android:textIsSelectable="true"
        app:layout_constraintTop_toBottomOf="@+id/edit_trip_enter"
        app:layout_constraintLeft_toLeftOf="@+id/const_layout"
        app:layout_constraintRight_toRightOf="@+id/const_layout"
        app:layout_constraintBottom_toTopOf="@+id/btn_start" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="@+id/const_layout"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toBottomOf="@+id/trips"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Reset"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toBottomOf="@+id/trips"
        app:layout_constraintBottom_toBottomOf="@+id/const_layout"
        app:layout_constraintLeft_toRightOf="@id/btn_start"/>
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Stop"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toBottomOf="@+id/trips"
        app:layout_constraintBottom_toBottomOf="@+id/const_layout"
        app:layout_constraintLeft_toRightOf="@id/btn_reset"/>
    <Button
        android:id="@+id/btn_exit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Exit"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toBottomOf="@+id/trips"
        app:layout_constraintBottom_toBottomOf="@+id/const_layout"
        app:layout_constraintLeft_toRightOf="@id/btn_stop"/>
</androidx.constraintlayout.widget.ConstraintLayout>